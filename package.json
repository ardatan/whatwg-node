{
  "name": "whatwg-node-monorepo",
  "private": true,
  "workspaces": [
    "packages/*",
    "e2e/*",
    "benchmarks/*"
  ],
  "scripts": {
    "build": "bob build",
    "ci:lint": "eslint --ext .ts . --output-file eslint_report.json --format json",
    "clean-dist": "rimraf \"dist\" && rimraf \".bob\"",
    "esm:check": "bob check",
    "jest-with-gc": "node --expose-gc ./node_modules/.bin/jest",
    "lint": "eslint --ext .ts .",
    "postinstall": "patch-package && husky install",
    "prebuild": "yarn clean-dist",
    "prerelease": "yarn build",
    "prerelease-canary": "yarn build",
    "prettier": "prettier --ignore-path .gitignore --ignore-path .prettierignore --write --list-different .",
    "prettier:check": "prettier --ignore-path .gitignore --ignore-path .prettierignore --check .",
    "release": "changeset publish",
    "test": "jest --runInBand --forceExit",
    "test:leaks": "LEAK_TEST=1 jest --runInBand --detectOpenHandles --detectLeaks --logHeapUsage --forceExit",
    "ts:check": "tsc --noEmit"
  },
  "devDependencies": {
    "@babel/core": "7.24.0",
    "@babel/plugin-proposal-class-properties": "7.18.6",
    "@babel/preset-env": "7.24.0",
    "@babel/preset-typescript": "7.23.3",
    "@changesets/changelog-github": "0.5.0",
    "@changesets/cli": "2.27.1",
    "@theguild/prettier-config": "2.0.5",
    "@types/jest": "29.5.12",
    "@types/node": "20.11.29",
    "@types/react-dom": "18.2.18",
    "@typescript-eslint/eslint-plugin": "7.3.0",
    "@typescript-eslint/parser": "7.3.0",
    "babel-jest": "29.7.0",
    "bob-the-bundler": "7.0.1",
    "cross-env": "7.0.3",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-config-standard": "17.1.0",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-n": "16.6.2",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "6.1.1",
    "eslint-plugin-standard": "5.0.0",
    "husky": "9.0.11",
    "jest": "29.7.0",
    "lint-staged": "15.2.2",
    "node-libcurl": "4.0.0",
    "patch-package": "8.0.0",
    "prettier": "3.2.5",
    "rimraf": "5.0.5",
    "ts-jest": "29.1.2",
    "typescript": "5.4.2"
  },
  "resolutions": {
    "@pulumi/pulumi": "3.111.1"
  },
  "lint-staged": {
    "packages/**/*.{ts,tsx}": [
      "eslint --fix"
    ],
    "**/*.{ts,tsx,graphql,yml,md,mdx,js,json}": [
      "prettier --write"
    ]
  }
}
